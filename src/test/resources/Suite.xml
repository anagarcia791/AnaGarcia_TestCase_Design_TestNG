<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Test suite ESPN">
    <listeners>
        <listener class-name="org.espn.utils.Listener"></listener>
    </listeners>

    <parameter name="url" value="https://www.espnqa.com/?src=com&amp;_adblock=true&amp;espn=cloud"></parameter>

    <test name="ESPN all test">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="org.espn.tests.LoginTest"></class>
            <class name="org.espn.tests.LogoutTest"></class>
            <class name="org.espn.tests.DeactivateUserTest"></class>
        </classes>
    </test>
</suite>